@{
    ViewData["Title"] = "Đã gửi email xác nhận";
}

<div class="container" style="padding: 4rem 0;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg" style="background: var(--bg-secondary); border-radius: 1rem; overflow: hidden;">
                <div class="card-body p-5 text-center">
                    <div style="width: 80px; height: 80px; background: rgba(16, 185, 129, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 2rem;">
                        <i class="fas fa-envelope-open-text" style="font-size: 2.5rem; color: #10b981;"></i>
                    </div>
                    
                    <h2 class="mb-3" style="font-weight: 700; color: var(--text-primary);">Kiểm tra email của bạn</h2>
                    <p class="text-muted mb-4">
                        Chúng tôi đã gửi hướng dẫn đặt lại mật khẩu đến email của bạn. 
                        Vui lòng kiểm tra hộp thư đến (và cả thư mục spam).
                    </p>

                    @if (TempData["ResetPasswordLink"] != null)
                    {
                        <div class="alert alert-info text-break" role="alert" style="background: rgba(59, 130, 246, 0.1); border-color: rgba(59, 130, 246, 0.2); color: #93c5fd;">
                            <strong>Demo Only:</strong><br/>
                            <a href="@TempData["ResetPasswordLink"]" class="alert-link" style="word-break: break-all;">Nhấn vào đây để đặt lại mật khẩu</a>
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary px-4" style="border-radius: 50px;">
                            <i class="fas fa-home me-2"></i> Về trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
