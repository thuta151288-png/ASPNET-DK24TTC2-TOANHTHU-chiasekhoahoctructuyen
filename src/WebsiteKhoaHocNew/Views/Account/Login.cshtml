@model LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container" style="max-width: 500px; margin: 4rem auto;">
    <div class="card glass-effect">
        <div class="card-body" style="padding: 3rem;">
            <h2 style="text-align: center; margin-bottom: 2rem;">
                <i class="fas fa-sign-in-alt"></i> Đăng Nhập
            </h2>

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Mật khẩu</label>
                    <input asp-for="Password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                    </div>
                    <a asp-action="ForgotPassword" style="font-size: 0.9rem; color: var(--text-muted);">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="btn btn-primary" style="width: 100%;">
                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                </button>
            </form>

            <hr style="margin: 2rem 0; border-color: var(--border-color);">

            <p style="text-align: center; margin: 0;">
                Chưa có tài khoản? 
                <a asp-action="Register" style="color: var(--primary-light); font-weight: 600;">Đăng ký ngay</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
