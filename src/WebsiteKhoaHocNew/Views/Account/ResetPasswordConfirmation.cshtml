@{
    ViewData["Title"] = "Đặt lại mật khẩu thành công";
}

<div class="container" style="padding: 4rem 0;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg" style="background: var(--bg-secondary); border-radius: 1rem; overflow: hidden;">
                <div class="card-body p-5 text-center">
                    <div style="width: 80px; height: 80px; background: rgba(16, 185, 129, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 2rem;">
                        <i class="fas fa-check-circle" style="font-size: 2.5rem; color: #10b981;"></i>
                    </div>
                    
                    <h2 class="mb-3" style="font-weight: 700; color: var(--text-primary);">Thành công!</h2>
                    <p class="text-muted mb-4">
                        Mật khẩu của bạn đã được đặt lại thành công. Bạn có thể đăng nhập ngay bây giờ.
                    </p>

                    <div class="mt-4">
                        <a asp-action="Login" class="btn btn-primary px-5 py-2" style="border-radius: 50px;">
                            <i class="fas fa-sign-in-alt me-2"></i> Đăng nhập ngay
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
