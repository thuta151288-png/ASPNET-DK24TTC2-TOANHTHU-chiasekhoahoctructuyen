@using Microsoft.AspNetCore.Identity
@using WebsiteKhoaHoc.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Học Trực Tuyến</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="@(ViewContext.RouteData.Values["area"]?.ToString() == "Admin" ? "background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);" : "")">
            <div class="container">
                @if (ViewContext.RouteData.Values["area"]?.ToString() == "Admin")
                {
                    <a class="navbar-brand" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <i class="fas fa-tachometer-alt"></i> Admin Panel
                    </a>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-graduation-cap"></i> Học Trực Tuyến
                    </a>
                }
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (ViewContext.RouteData.Values["area"]?.ToString() == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                    <i class="fas fa-chart-line"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Courses" asp-action="Index">
                                    <i class="fas fa-book"></i> Khóa học
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Categories" asp-action="Index">
                                    <i class="fas fa-tags"></i> Danh mục
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">
                                    <i class="fas fa-users"></i> Người dùng
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Orders" asp-action="Index">
                                    <i class="fas fa-shopping-cart"></i> Đơn hàng
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home"></i> Trang chủ
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Courses" asp-action="Index">
                                    <i class="fas fa-book"></i> Khóa học
                                </a>
                            </li>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Courses" asp-action="MyCourses">
                                        <i class="fas fa-book-reader"></i> Khóa học của tôi
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (ViewContext.RouteData.Values["area"]?.ToString() == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="color: var(--accent-color); font-weight: 600;">
                                    <i class="fas fa-home"></i> Về trang chủ
                                </a>
                            </li>
                        }
                        
                        @if (SignInManager.IsSignedIn(User))
                        {
                            @if (User.IsInRole("Admin") && ViewContext.RouteData.Values["area"]?.ToString() != "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                        <i class="fas fa-tachometer-alt"></i> Quản trị
                                    </a>
                                </li>
                            }
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i> @User.Identity!.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" style="background: var(--bg-secondary); border: 1px solid var(--border-color);">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile" style="color: var(--text-secondary); padding: 0.5rem 1rem; display: block;">
                                            <i class="fas fa-user"></i> Hồ sơ
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Courses" asp-action="TransactionHistory" style="color: var(--text-secondary); padding: 0.5rem 1rem; display: block;">
                                            <i class="fas fa-history"></i> Lịch sử giao dịch
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" style="border-color: var(--border-color);"></li>
                                    <li>
                                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item" style="color: var(--text-secondary); padding: 0.5rem 1rem; background: none; border: none; width: 100%; text-align: left; cursor: pointer;">
                                                <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Đăng ký
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @if (TempData["Success"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    @if (TempData["Info"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="fas fa-info-circle"></i> @TempData["Info"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div>
                    <h5><i class="fas fa-graduation-cap"></i> Học Trực Tuyến</h5>
                    <p style="color: var(--text-muted);">Nền tảng học trực tuyến hàng đầu Việt Nam. Học mọi lúc, mọi nơi với các khóa học chất lượng cao.</p>
                </div>
                <div>
                    <h5>Liên kết nhanh</h5>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li><a asp-controller="Courses" asp-action="Index">Khóa học</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">Chính sách</a></li>
                    </ul>
                </div>
                <div>
                    <h5>Hỗ trợ</h5>
                    <ul>
                        <li><a href="#">Trung tâm trợ giúp</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
                        <li><a href="#">Điều khoản sử dụng</a></li>
                    </ul>
                </div>
                <div>
                    <h5>Kết nối với chúng tôi</h5>
                    <div style="display: flex; gap: 1rem; font-size: 1.5rem;">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </div>
            <hr style="border-color: var(--border-color); margin: 2rem 0;">
            <div style="text-align: center; color: var(--text-muted);">
                <p>&copy; 2025 Học Trực Tuyến. Tất cả quyền được bảo lưu.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

