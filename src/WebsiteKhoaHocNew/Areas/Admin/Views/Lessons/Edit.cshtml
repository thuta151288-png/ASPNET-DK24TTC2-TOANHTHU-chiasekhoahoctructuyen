@using WebsiteKhoaHoc.Models
@model Lesson
@{
    ViewData["Title"] = "Sửa bài học";
    var course = ViewData["Course"] as Course;
}

<div class="container" style="padding: 3rem 0;">
    <!-- Header -->
    <div style="margin-bottom: 2rem;">
        <h1>
            <i class="fas fa-edit"></i> Chỉnh Sửa Bài Học
        </h1>
        @if (course != null)
        {
            <p style="color: var(--text-secondary); margin-top: 0.5rem;">
                Khóa học: <strong style="color: var(--primary-light);">@course.Title</strong>
            </p>
        }
    </div>

    <!-- Form -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body" style="padding: 2rem;">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CourseId" />
                        <input type="hidden" asp-for="CreatedAt" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">
                                <i class="fas fa-heading"></i> Tiêu đề bài học <span style="color: var(--error-color);">*</span>
                            </label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left"></i> Mô tả
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VideoUrl" class="form-label">
                                <i class="fas fa-video"></i> URL Video
                            </label>
                            <input asp-for="VideoUrl" class="form-control" />
                            <small style="color: var(--text-muted); display: block; margin-top: 0.5rem;">
                                <i class="fas fa-info-circle"></i> 
                                Hỗ trợ: YouTube, Vimeo, hoặc link video trực tiếp (.mp4)
                            </small>
                            <span asp-validation-for="VideoUrl" class="text-danger"></span>
                            
                            @if (!string.IsNullOrEmpty(Model.VideoUrl))
                            {
                                <div style="margin-top: 1rem; padding: 1rem; background: var(--bg-tertiary); border-radius: var(--radius-md);">
                                    <strong style="color: var(--text-primary);">Video hiện tại:</strong>
                                    <div style="margin-top: 0.5rem;">
                                        @if (Model.VideoUrl.Contains("youtube.com") || Model.VideoUrl.Contains("youtu.be"))
                                        {
                                            <span class="badge" style="background: #FF0000;">
                                                <i class="fab fa-youtube"></i> YouTube
                                            </span>
                                        }
                                        else if (Model.VideoUrl.Contains("vimeo.com"))
                                        {
                                            <span class="badge" style="background: #1AB7EA;">
                                                <i class="fab fa-vimeo"></i> Vimeo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-primary">
                                                <i class="fas fa-video"></i> Video
                                            </span>
                                        }
                                        <a href="@Model.VideoUrl" target="_blank" style="margin-left: 0.5rem; color: var(--primary-light);">
                                            <i class="fas fa-external-link-alt"></i> Xem video
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="mb-3">
                            <label asp-for="DocumentUrl" class="form-label">
                                <i class="fas fa-file-alt"></i> URL Tài liệu
                            </label>
                            <input asp-for="DocumentUrl" class="form-control" />
                            <small style="color: var(--text-muted); display: block; margin-top: 0.5rem;">
                                <i class="fas fa-info-circle"></i> 
                                Link đến tài liệu bổ sung (tùy chọn)
                            </small>
                            <span asp-validation-for="DocumentUrl" class="text-danger"></span>
                            
                            @if (!string.IsNullOrEmpty(Model.DocumentUrl))
                            {
                                <div style="margin-top: 1rem;">
                                    <a href="@Model.DocumentUrl" target="_blank" class="btn btn-sm btn-secondary">
                                        <i class="fas fa-download"></i> Xem tài liệu hiện tại
                                    </a>
                                </div>
                            }
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DurationMinutes" class="form-label">
                                    <i class="fas fa-clock"></i> Thời lượng (phút) <span style="color: var(--error-color);">*</span>
                                </label>
                                <input asp-for="DurationMinutes" type="number" class="form-control" min="1" />
                                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="OrderIndex" class="form-label">
                                    <i class="fas fa-sort-numeric-up"></i> Thứ tự <span style="color: var(--error-color);">*</span>
                                </label>
                                <input asp-for="OrderIndex" type="number" class="form-control" min="1" />
                                <small style="color: var(--text-muted); display: block; margin-top: 0.5rem;">
                                    <i class="fas fa-info-circle"></i> 
                                    Thay đổi để sắp xếp lại vị trí bài học
                                </small>
                                <span asp-validation-for="OrderIndex" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="alert alert-warning" style="margin-top: 1.5rem;">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Lưu ý:</strong> Thay đổi thứ tự có thể ảnh hưởng đến trải nghiệm học của học viên.
                        </div>

                        <div style="display: flex; gap: 1rem; margin-top: 2rem; padding-top: 2rem; border-top: 1px solid var(--border-color);">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Cập Nhật
                            </button>
                            <a asp-action="Index" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay Lại
                            </a>
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="margin-left: auto;"
                                  onsubmit="return confirm('Bạn có chắc muốn xóa bài học này?');">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Xóa Bài Học
                                </button>
                            </form>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Info -->
            <div class="card" style="margin-bottom: 1.5rem;">
                <div class="card-body">
                    <h5 style="margin-bottom: 1rem;">
                        <i class="fas fa-info-circle"></i> Thông tin
                    </h5>
                    <div style="color: var(--text-secondary); font-size: 0.9rem;">
                        <p style="margin-bottom: 0.5rem;">
                            <strong>ID:</strong> 
                            <code style="background: var(--bg-tertiary); padding: 0.25rem 0.5rem; border-radius: 4px;">
                                @Model.Id
                            </code>
                        </p>
                        <p style="margin-bottom: 0.5rem;">
                            <strong>Ngày tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                        </p>
                        <p style="margin-bottom: 0;">
                            <strong>Thứ tự hiện tại:</strong> #@Model.OrderIndex
                        </p>
                    </div>
                </div>
            </div>

            <!-- Course Info -->
            @if (course != null)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 style="margin-bottom: 1rem;">
                            <i class="fas fa-book"></i> Khóa học
                        </h5>
                        <div style="color: var(--text-secondary); font-size: 0.9rem;">
                            <p style="margin-bottom: 0.5rem;">
                                <strong>Tên:</strong> @course.Title
                            </p>
                            <p style="margin-bottom: 0.5rem;">
                                <strong>Giảng viên:</strong> @course.InstructorName
                            </p>
                            <p style="margin-bottom: 1rem;">
                                <strong>Tổng bài học:</strong> @(course.Lessons?.Count ?? 0)
                            </p>
                            @{ var courseId = course.Id; }
                            <a asp-controller="Courses" asp-action="Edit" asp-route-id="@courseId" 
                               class="btn btn-sm btn-secondary" style="width: 100%;">
                                <i class="fas fa-edit"></i> Sửa khóa học
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
