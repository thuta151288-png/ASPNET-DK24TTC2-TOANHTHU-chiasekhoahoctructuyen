            <p style="color: var(--text-muted); margin: 0;">
                T·ªïng s·ªë: <strong style="color: var(--primary-light);">@Model.Count()</strong> ƒë∆°n h√†ng
            </p>
        </div>
    </div>

    <!-- Filter -->
    <div class="card" style="margin-bottom: 2rem; padding: 1.5rem; border: 2px solid var(--border-color);">
        <form method="get" asp-action="Index">
            <div class="row">
                <div class="col-md-4">
                    <label style="font-weight: 600; margin-bottom: 0.5rem; display: block;">
                        <i class="fas fa-filter"></i> Tr·∫°ng th√°i
                    </label>
                    <select name="status" class="form-select" style="padding: 0.75rem;">
                        <option value="">T·∫•t c·∫£ tr·∫°ng th√°i</option>
                        <option value="0">‚è≥ Pending</option>
                        <option value="1">‚úÖ Completed</option>
                        <option value="2">‚ùå Failed</option>
                        <option value="3">üîÑ Refunded</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label style="font-weight: 600; margin-bottom: 0.5rem; display: block;">
                        <i class="fas fa-search"></i> T√¨m ki·∫øm
                    </label>
                    <input type="text" name="search" class="form-control" 
                           placeholder="T√¨m theo email, kh√≥a h·ªçc..." 
                           value="@ViewBag.Search" 
                           style="padding: 0.75rem;" />
                </div>
                <div class="col-md-2">
                    <label style="margin-bottom: 0.5rem; display: block; opacity: 0;">.</label>
                    <button type="submit" class="btn btn-primary" style="width: 100%; padding: 0.75rem;">
                        <i class="fas fa-search"></i> L·ªçc
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Table -->
    <div class="card" style="border: 2px solid var(--border-color); overflow: hidden; background: transparent;">
        <div class="table-responsive">
            <table style="margin: 0; width: 100%; border-collapse: collapse; background: transparent;">
                <thead style="background: var(--bg-tertiary); position: sticky; top: 0; z-index: 10;">
                    <tr>
                        <th style="padding: 1.25rem; font-weight: 700; color: var(--text-primary); border-bottom: 2px solid var(--primary-color); width: 100px;">
                            M√£ ƒêH
                        </th>
                        <th style="padding: 1.25rem; font-weight: 700; color: var(--text-primary); border-bottom: 2px solid var(--primary-color); min-width: 200px;">
                            Kh√°ch h√†ng
                        </th>
                        <th style="padding: 1.25rem; font-weight: 700; color: var(--text-primary); border-bottom: 2px solid var(--primary-color); min-width: 250px;">
                            Kh√≥a h·ªçc
                        </th>
                        <th style="padding: 1.25rem; font-weight: 700; color: var(--text-primary); border-bottom: 2px solid var(--primary-color); width: 130px; text-align: right;">
                            S·ªë ti·ªÅn
                        </th>
                        <th style="padding: 1.25rem; font-weight: 700; color: var(--text-primary); border-bottom: 2px solid var(--primary-color); width: 120px;">
                            Ph∆∞∆°ng th·ª©c
                        </th>
                        <th style="padding: 1.25rem; font-weight: 700; color: var(--text-primary); border-bottom: 2px solid var(--primary-color); width: 140px;">
                            Ng√†y t·∫°o
                        </th>
                        <th style="padding: 1.25rem; font-weight: 700; color: var(--text-primary); border-bottom: 2px solid var(--primary-color); width: 130px; text-align: center;">
                            Tr·∫°ng th√°i
                        </th>
                        <th style="padding: 1.25rem; font-weight: 700; color: var(--text-primary); border-bottom: 2px solid var(--primary-color); width: 100px; text-align: center;">
                            Chi ti·∫øt
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr style="border-bottom: 1px solid var(--border-color); transition: all 0.2s ease;"
                            onmouseover="this.style.background='var(--bg-tertiary)'"
                            onmouseout="this.style.background='transparent'">
                            
                            <!-- Order ID -->
                            <td style="padding: 1.25rem; vertical-align: middle;">
                                <code style="background: var(--primary-color); color: white; padding: 0.5rem 0.75rem; border-radius: var(--radius-md); font-weight: 700; font-size: 0.9rem;">
                                    #@order.Id.ToString("D6")
                                </code>
                            </td>

                            <!-- Customer -->
                            <td style="padding: 1.25rem; vertical-align: middle;">
                                @if (order.User != null)
                                {
                                    <div style="font-weight: 700; color: var(--text-primary); margin-bottom: 0.25rem;">
                                        @order.User.FullName
                                    </div>
                                    <div style="color: var(--text-muted); font-size: 0.85rem;">
                                        <i class="fas fa-envelope"></i> @order.User.Email
                                    </div>
                                }
                                else
                                {
                                    <span style="color: var(--text-muted);">N/A</span>
                                }
                            </td>

                            <!-- Course -->
                            <td style="padding: 1.25rem; vertical-align: middle;">
                                @if (order.Course != null)
                                {
                                    <div style="font-weight: 600; color: var(--text-primary); margin-bottom: 0.25rem;">
                                        @order.Course.Title
                                    </div>
                                    <div style="color: var(--text-muted); font-size: 0.85rem;">
                                        <i class="fas fa-folder"></i> @(order.Course.Category?.Name ?? "N/A")
                                    </div>
                                }
                                else
                                {
                                    <span style="color: var(--text-muted);">N/A</span>
                                }
                            </td>

                            <!-- Amount -->
                            <td style="padding: 1.25rem; vertical-align: middle; text-align: right;">
                                <div style="font-weight: 700; font-size: 1.1rem; color: var(--success-color);">
                                    @order.Amount.ToString("N0")
                                </div>
                                <div style="font-size: 0.85rem; color: var(--text-muted);">
                                    VNƒê
                                </div>
                            </td>

                            <!-- Payment Method -->
                            <td style="padding: 1.25rem; vertical-align: middle;">
                                <span style="color: var(--text-secondary);">
                                    @if (!string.IsNullOrEmpty(order.PaymentMethod))
                                    {
                                        @if (order.PaymentMethod == "Demo")
                                        {
                                            <i class="fas fa-flask"></i><text> Demo</text>
                                        }
                                        else if (order.PaymentMethod == "VNPay")
                                        {
                                            <i class="fas fa-credit-card"></i><text> VNPay</text>
                                        }
                                        else if (order.PaymentMethod == "MoMo")
                                        {
                                            <i class="fas fa-mobile-alt"></i><text> MoMo</text>
                                        }
                                        else
                                        {
                                            @order.PaymentMethod
                                        }
                                    }
                                    else
                                    {
                                        <span style="color: var(--text-muted);">N/A</span>
                                    }
                                </span>
                            </td>

                            <!-- Date -->
                            <td style="padding: 1.25rem; vertical-align: middle;">
                                <div style="color: var(--text-secondary);">
                                    <i class="fas fa-calendar"></i> @order.CreatedAt.ToString("dd/MM/yyyy")
                                </div>
                                <div style="color: var(--text-muted); font-size: 0.85rem;">
                                    <i class="fas fa-clock"></i> @order.CreatedAt.ToString("HH:mm")
                                </div>
                            </td>

                            <!-- Status -->
                            <td style="padding: 1.25rem; vertical-align: middle; text-align: center;">
                                @switch (order.PaymentStatus)
                                {
                                    case PaymentStatus.Pending:
                                        <span class="badge" style="background: var(--accent-color); padding: 0.5rem 1rem; font-size: 0.9rem; font-weight: 600;">
                                            <i class="fas fa-clock"></i> Pending
                                        </span>
                                        break;
                                    case PaymentStatus.Completed:
                                        <span class="badge" style="background: var(--success-color); padding: 0.5rem 1rem; font-size: 0.9rem; font-weight: 600;">
                                            <i class="fas fa-check-circle"></i> Completed
                                        </span>
                                        break;
                                    case PaymentStatus.Failed:
                                        <span class="badge" style="background: var(--error-color); padding: 0.5rem 1rem; font-size: 0.9rem; font-weight: 600;">
                                            <i class="fas fa-times-circle"></i> Failed
                                        </span>
                                        break;
                                    case PaymentStatus.Refunded:
                                        <span class="badge" style="background: var(--text-muted); padding: 0.5rem 1rem; font-size: 0.9rem; font-weight: 600;">
                                            <i class="fas fa-undo"></i> Refunded
                                        </span>
                                        break;
                                }
                            </td>

                            <!-- Details Link -->
                            <td style="padding: 1.25rem; vertical-align: middle; text-align: center;">
                                <a asp-action="Details" asp-route-id="@order.Id" 
                                   class="btn btn-sm btn-primary" 
                                   style="padding: 0.6rem 1rem;"
                                   title="Xem chi ti·∫øt">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Summary Stats -->
    <div class="row" style="margin-top: 2.5rem;">
        <div class="col-md-3">
            <div class="card" style="text-align: center; padding: 1.5rem; border: 2px solid var(--primary-color); background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);">
                <div style="font-size: 2.5rem; color: var(--primary-light); margin-bottom: 0.5rem; font-weight: 700;">
                    @Model.Count()
                </div>
                <div style="color: var(--text-secondary); font-weight: 600; text-transform: uppercase; font-size: 0.85rem; letter-spacing: 1px;">
                    <i class="fas fa-shopping-cart"></i> T·ªïng ƒë∆°n h√†ng
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card" style="text-align: center; padding: 1.5rem; border: 2px solid var(--success-color); background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);">
                <div style="font-size: 2.5rem; color: var(--success-color); margin-bottom: 0.5rem; font-weight: 700;">
                    @Model.Count(o => o.PaymentStatus == PaymentStatus.Completed)
                </div>
                <div style="color: var(--text-secondary); font-weight: 600; text-transform: uppercase; font-size: 0.85rem; letter-spacing: 1px;">
                    <i class="fas fa-check-circle"></i> Th√†nh c√¥ng
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card" style="text-align: center; padding: 1.5rem; border: 2px solid var(--accent-color); background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);">
                <div style="font-size: 2.5rem; color: var(--accent-color); margin-bottom: 0.5rem; font-weight: 700;">
                    @Model.Count(o => o.PaymentStatus == PaymentStatus.Pending)
                </div>
                <div style="color: var(--text-secondary); font-weight: 600; text-transform: uppercase; font-size: 0.85rem; letter-spacing: 1px;">
                    <i class="fas fa-clock"></i> ƒêang x·ª≠ l√Ω
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card" style="text-align: center; padding: 1.5rem; border: 2px solid var(--secondary-color); background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);">
                <div style="font-size: 1.8rem; color: var(--secondary-color); margin-bottom: 0.5rem; font-weight: 700;">
                    @Model.Where(o => o.PaymentStatus == PaymentStatus.Completed).Sum(o => o.Amount).ToString("N0")
                </div>
                <div style="color: var(--text-secondary); font-weight: 600; text-transform: uppercase; font-size: 0.85rem; letter-spacing: 1px;">
                    <i class="fas fa-dollar-sign"></i> Doanh thu (VNƒê)
                </div>
            </div>
        </div>
    </div>
</div>

<style>
