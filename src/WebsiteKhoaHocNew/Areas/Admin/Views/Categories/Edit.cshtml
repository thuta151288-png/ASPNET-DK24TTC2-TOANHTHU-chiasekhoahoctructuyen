@using WebsiteKhoaHoc.Models
@model Category

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
}

<div class="container" style="padding: 3rem 0;">
    <!-- Header -->
    <div style="margin-bottom: 2rem;">
        <h1>
            <i class="fas fa-edit"></i> Chỉnh Sửa Danh Mục
        </h1>
        <p style="color: var(--text-secondary); margin-top: 0.5rem;">
            ID: <code style="background: var(--bg-tertiary); padding: 0.25rem 0.5rem; border-radius: 4px;">@Model.Id</code>
        </p>
    </div>

    <!-- Form -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body" style="padding: 2rem;">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedAt" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="fas fa-tag"></i> Tên danh mục <span style="color: var(--error-color);">*</span>
                            </label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left"></i> Mô tả
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <small style="color: var(--text-muted); display: block; margin-top: 0.5rem;">
                                <i class="fas fa-info-circle"></i> 
                                Mô tả sẽ hiển thị khi người dùng lọc khóa học theo danh mục
                            </small>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        @if (Model.Courses != null && Model.Courses.Any())
                        {
                            <div class="alert alert-warning" style="margin-top: 1.5rem;">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Lưu ý:</strong> Danh mục này đang được sử dụng bởi <strong>@Model.Courses.Count</strong> khóa học. 
                                Thay đổi tên có thể ảnh hưởng đến cách hiển thị.
                            </div>
                        }

                        <div style="display: flex; gap: 1rem; margin-top: 2rem; padding-top: 2rem; border-top: 1px solid var(--border-color);">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Cập Nhật
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay Lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Stats -->
            <div class="card" style="margin-bottom: 1.5rem;">
                <div class="card-body">
                    <h5 style="margin-bottom: 1rem;">
                        <i class="fas fa-chart-bar"></i> Thống kê
                    </h5>
                    <div style="color: var(--text-secondary); font-size: 0.9rem;">
                        <p style="margin-bottom: 0.5rem;">
                            <strong>Số khóa học:</strong> 
                            <span style="color: var(--primary-light); font-size: 1.5rem; font-weight: 700;">
                                @(Model.Courses?.Count ?? 0)
                            </span>
                        </p>
                        <p style="margin-bottom: 0.5rem;">
                            <strong>Ngày tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")
                        </p>
                    </div>
                </div>
            </div>

            <!-- Courses -->
            @if (Model.Courses != null && Model.Courses.Any())
            {
                <div class="card" style="margin-bottom: 1.5rem;">
                    <div class="card-body">
                        <h5 style="margin-bottom: 1rem;">
                            <i class="fas fa-book"></i> Khóa học (@Model.Courses.Count)
                        </h5>
                        <div style="max-height: 300px; overflow-y: auto;">
                            @foreach (var course in Model.Courses.Take(10))
                            {
                                <div style="padding: 0.75rem; margin-bottom: 0.5rem; background: var(--bg-tertiary); border-radius: var(--radius-md); border-left: 3px solid var(--primary-color);">
                                    <div style="font-weight: 600; color: var(--text-primary); margin-bottom: 0.25rem;">
                                        @course.Title
                                    </div>
                                    <div style="font-size: 0.85rem; color: var(--text-muted);">
                                        <i class="fas fa-user"></i> @course.InstructorName
                                        <span style="margin-left: 1rem;">
                                            <i class="fas fa-tag"></i> @course.Price.ToString("N0") VNĐ
                                        </span>
                                    </div>
                                </div>
                            }
                            @if (Model.Courses.Count > 10)
                            {
                                <p style="text-align: center; color: var(--text-muted); margin: 1rem 0 0 0;">
                                    ... và @(Model.Courses.Count - 10) khóa học khác
                                </p>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card" style="margin-bottom: 1.5rem;">
                    <div class="card-body" style="text-align: center; padding: 2rem;">
                        <div style="font-size: 3rem; color: var(--text-muted); margin-bottom: 1rem;">
                            <i class="fas fa-inbox"></i>
                        </div>
                        <p style="color: var(--text-secondary); margin: 0;">
                            Chưa có khóa học nào trong danh mục này
                        </p>
                    </div>
                </div>
            }

            <!-- Danger Zone -->
            <div class="card" style="border-color: var(--error-color);">
                <div class="card-body">
                    <h5 style="margin-bottom: 1rem; color: var(--error-color);">
                        <i class="fas fa-exclamation-triangle"></i> Vùng nguy hiểm
                    </h5>
                    
                    @if (Model.Courses != null && Model.Courses.Any())
                    {
                        <p style="color: var(--text-secondary); font-size: 0.9rem; margin-bottom: 1rem;">
                            Không thể xóa danh mục này vì đang có <strong>@Model.Courses.Count</strong> khóa học sử dụng.
                        </p>
                        <button class="btn btn-danger" style="width: 100%;" disabled>
                            <i class="fas fa-ban"></i> Không Thể Xóa
                        </button>
                    }
                    else
                    {
                        <p style="color: var(--text-secondary); font-size: 0.9rem; margin-bottom: 1rem;">
                            Xóa danh mục này vĩnh viễn. Hành động này không thể hoàn tác!
                        </p>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
                              onsubmit="return confirm('Bạn có chắc muốn xóa danh mục này?');">
                            <button type="submit" class="btn btn-danger" style="width: 100%;">
                                <i class="fas fa-trash"></i> Xóa Danh Mục
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
