@model Category

@{
    ViewData["Title"] = "Thêm danh mục";
}

<div class="container" style="padding: 3rem 0;">
    <!-- Header -->
    <div style="margin-bottom: 2rem;">
        <h1>
            <i class="fas fa-plus-circle"></i> Thêm Danh Mục Mới
        </h1>
        <p style="color: var(--text-secondary); margin-top: 0.5rem;">
            Tạo danh mục để phân loại khóa học
        </p>
    </div>

    <!-- Form -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body" style="padding: 2rem;">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="fas fa-tag"></i> Tên danh mục <span style="color: var(--error-color);">*</span>
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="VD: Lập trình, Marketing, Thiết kế..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left"></i> Mô tả
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" 
                                      placeholder="Mô tả ngắn gọn về danh mục này..."></textarea>
                            <small style="color: var(--text-muted); display: block; margin-top: 0.5rem;">
                                <i class="fas fa-info-circle"></i> 
                                Mô tả sẽ hiển thị khi người dùng lọc khóa học theo danh mục
                            </small>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info" style="margin-top: 1.5rem;">
                            <i class="fas fa-lightbulb"></i>
                            <strong>Mẹo:</strong> Tên danh mục nên ngắn gọn, dễ hiểu và phản ánh đúng nội dung khóa học.
                        </div>

                        <div style="display: flex; gap: 1rem; margin-top: 2rem; padding-top: 2rem; border-top: 1px solid var(--border-color);">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Tạo Danh Mục
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Examples -->
            <div class="card" style="margin-bottom: 1.5rem;">
                <div class="card-body">
                    <h5 style="margin-bottom: 1rem;">
                        <i class="fas fa-lightbulb"></i> Ví dụ danh mục
                    </h5>
                    <div style="color: var(--text-secondary); font-size: 0.9rem;">
                        <div style="margin-bottom: 1rem;">
                            <strong style="color: var(--primary-light);">Lập trình</strong>
                            <p style="margin: 0.25rem 0 0 0; font-size: 0.85rem;">
                                Các khóa học về lập trình web, mobile, desktop...
                            </p>
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <strong style="color: var(--primary-light);">Marketing</strong>
                            <p style="margin: 0.25rem 0 0 0; font-size: 0.85rem;">
                                Digital marketing, SEO, social media...
                            </p>
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <strong style="color: var(--primary-light);">Thiết kế</strong>
                            <p style="margin: 0.25rem 0 0 0; font-size: 0.85rem;">
                                UI/UX, đồ họa, video editing...
                            </p>
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <strong style="color: var(--primary-light);">Kinh doanh</strong>
                            <p style="margin: 0.25rem 0 0 0; font-size: 0.85rem;">
                                Quản trị, khởi nghiệp, tài chính...
                            </p>
                        </div>
                        <div>
                            <strong style="color: var(--primary-light);">Ngoại ngữ</strong>
                            <p style="margin: 0.25rem 0 0 0; font-size: 0.85rem;">
                                Tiếng Anh, Tiếng Nhật, Tiếng Hàn...
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tips -->
            <div class="card">
                <div class="card-body">
                    <h5 style="margin-bottom: 1rem;">
                        <i class="fas fa-info-circle"></i> Lưu ý
                    </h5>
                    <div style="color: var(--text-secondary); font-size: 0.9rem;">
                        <ul style="margin-left: 1.5rem; margin-bottom: 0;">
                            <li style="margin-bottom: 0.5rem;">
                                Tên danh mục không nên quá dài (tối đa 100 ký tự)
                            </li>
                            <li style="margin-bottom: 0.5rem;">
                                Mỗi danh mục nên có ít nhất 3-5 khóa học
                            </li>
                            <li style="margin-bottom: 0.5rem;">
                                Tránh tạo quá nhiều danh mục tương tự nhau
                            </li>
                            <li>
                                Có thể chỉnh sửa hoặc xóa danh mục sau khi tạo
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
